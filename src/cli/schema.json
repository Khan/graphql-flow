{
    "$schema":"http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "crawl": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "root": {"type": "string"},
                "pragma": {
                    "type": "string"
                },
                "loosePragma": {
                    "type": "string"
                },
                "ignorePragma": {
                    "type": "string"
                },
                "dumpOperations": {
                    "type": "string"
                }
            },
            "required": [ "root" ]
        },
        "generate": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "schemaFilePath": {
                    "type": "string"
                },
                "match": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            { "type": "object" },
                            { "type": "string" }
                        ]
                    }
                },
                "exclude": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            { "type": "object" },
                            { "type": "string" }
                        ]
                    }
                },
                "scalars": {
                    "type": "object"
                },
                "strictNullability": {
                    "type": "boolean"
                },
                "regenerateCommand": {
                    "type": "string"
                },
                "readOnlyArray": {
                    "type": "boolean"
                },
                "splitTypes": {
                    "type": "boolean"
                },
                "generatedDirectory": {
                    "type": "string"
                },
                "exportAllObjectTypes": {
                    "type": "boolean"
                },
                "typeFileName": {
                    "type": "string"
                },
                "experimentalEnums": {
                    "type": "boolean"
                }
            },
            "required": [
                "schemaFilePath"
            ]
        }
    },
    "required": [ "crawl", "generate" ]
}